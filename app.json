{
  "expo": {
    "name": "Vibot",
    "slug": "vibot-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vibot.memorypalace",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Vibot needs microphone access to capture voice memories"
      }
    },
    "android": {
      "package": "com.vibot.memorypalace",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A1A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Vibot needs microphone access to capture voice memories."
        }
      ]
    ]
  }
}
